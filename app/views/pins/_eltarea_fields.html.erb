
<fieldset class="px-eltarea-field">

  <%= button_tag(type: "button", class: "remove_fields btn btn-default btn-xs px-el-remove") do %><i class="glyphicon glyphicon-remove"></i>
  <% end %>
  <%#= link_to "remove", '#', class: "remove_fields" %>
  <div class="px-editable-tarea px-resizable-el" style="width:auto; height:auto" data-placeholder='Enter some text' contenteditable='true'></div>
  <%= f.hidden_field :textarea, :class => "px-eltarea-hidden-field" %><br />
  <%= f.hidden_field :_destroy %>


  <%= f.fields_for :pincsses do |builder| %>
  <%= render 'pincss_fields', f: builder %>
  <% end %>

  <% f.object.build_formcss %>

  <%= f.fields_for :formcss do |builder| %>
  <%= render 'formcss_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add pincsses", f, :pincsses, "add_pin_eltext_pincsses" %>


  <form>
    <textarea id="editor1" name="editor1" rows="10" cols="80">
      This is my textarea to be replaced with CKEditor.
    </textarea>
    <script>
// Replace the <textarea id="editor1"> with a CKEditor
// instance, using default configuration.
CKEDITOR.replace( 'editor1', {
  toolbar: 'Basic',
  uiColor: '#9AB8F3'
});

</script>
</form>

</fieldset>
